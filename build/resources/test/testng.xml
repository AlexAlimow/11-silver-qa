<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SuperTutorGuiSuite" verbose="1" parallel="false">

    <parameter name="browser" value="chrome"/>

    <!-- Login Ð¸ HomePage Tests -->
    <test name="Login and HomePage Tests">
        <groups>
            <run>
                <include name="login"/>
            </run>
        </groups>
        <classes>
            <class name="de.ait.SuperTutor.gui.tests.LoginUITest"/>
            <class name="de.ait.SuperTutor.gui.tests.HomePageButtonsTest"/>
        </classes>
    </test>

    <!-- Start Training Navigation Test -->
    <test name="Start Training Navigation Test">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="de.ait.SuperTutor.gui.tests.StartTrainingTest"/>
        </classes>
    </test>

</suite>
